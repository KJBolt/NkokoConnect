<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron job to send scheduled SMS reminders -->
        <record id="ir_cron_send_scheduled_reminders" model="ir.cron">
            <field name="name">Send Scheduled Reminders</field>
            <field name="model_id" ref="model_reminders"/>
            <field name="state">code</field>
            <field name="code">model._cron_send_scheduled_reminders()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 00:00:01')" />
        </record>
    </data>
</odoo>
